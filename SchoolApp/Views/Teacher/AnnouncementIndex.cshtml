@model IEnumerable<SchoolApp.Models.Announcement>

@{
    ViewData["Title"] = "School App";
}
<p>
    <a asp-action="CreateAnnouncement">Create New Announcement</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AnnouncementTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnnouncementDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MediaUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnnouncementAuthor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AnnouncementTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnnouncementDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MediaUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnnouncementAuthor)
                </td>
                <td>
                    <a asp-action="AnnouncementEdit" asp-route-id="@item.AnnouncementId">Edit |</a>
                    <a asp-action="AnnouncementDelete" asp-route-id="@item.AnnouncementId">delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>