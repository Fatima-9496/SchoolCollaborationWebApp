@model SchoolApp.Models.Announcement;

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}
<div class="pt--120 pb--70">
    <div class="container">
                <h2 class="primary-color">Edit Announcement</h2>
        <div class="formbold-main-wrapper">
          <div class="formbold-form-wrapper">
            <form asp-action="AnnouncementEdit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AnnouncementId" />
              <div class="formbold-mb-3">
                <label asp-for="AnnouncementTitle" class="formbold-form-label"> Announcement Title: </label>
                <input
                  type="text"
                  asp-for="AnnouncementTitle"
                  id="age"
                  class="formbold-form-input"
                />
                <span asp-validation-for="AnnouncementTitle" class="text-danger"></span>
              </div>

              
              <div class="formbold-mb-3">
                <label asp-for="AnnouncementDescription" class="formbold-form-label">
                  Announcement description
                </label>
                <textarea
                  rows="6"
                  asp-for="AnnouncementDescription"
                  id="message"
                  class="formbold-form-input"
                ></textarea>
                 <span asp-validation-for="AnnouncementDescription" class="text-danger"></span>
              </div>
              @*<div class="formbold-mb-3">
                  <label asp-for="PostDate" class="formbold-form-label">Post Date </label>
                  @Html.TextBoxFor(model => model.PostDate, new { @class = "formbold-form-input formbold-mb-3", type = "date", id="address" })
                  <span asp-validation-for="PostDate" class="text-danger"></span>                              
              </div>*@
              <div class="formbold-form-file-flex">
                <label asp-for="AnnouncementPhoto" class="formbold-form-label">
                  Announcement image
                </label>
                <input
                  type="file"
                  asp-for="AnnouncementPhoto"
                  id="upload"
                  class="formbold-form-file"
                  accept="image/*"
                />
                <span asp-validation-for="AnnouncementPhoto" class="text-danger"></span> 
              </div>
              <div class="formbold-form-file-flex">
                <label asp-for="AnnouncementFile" class="formbold-form-label">
                  Announcement file
                </label>
                <input
                  type="file"
                  asp-for="AnnouncementFile"
                  id="upload"
                  class="formbold-form-file"
                  accept="image/*, application/pdf, application/msword, video/*, .txt"
                />
                <span asp-validation-for="AnnouncementFile" class="text-danger"></span> 
              </div>
              <div class="formbold-mb-3">
                <label asp-for="AnnouncementAuthor" class="formbold-form-label"> Announcement Author </label>

                <input
                  type="text"
                  asp-for="AnnouncementAuthor"
                  id="address"
                  placeholder="Street address"
                  class="formbold-form-input formbold-mb-3"
                />
                 <span asp-validation-for="AnnouncementAuthor" class="text-danger"></span>              
              </div>
              <input type="submit" value="Edit" class="formbold-btn">
            </form>
          </div>
        </div>
    </div>
</div>
