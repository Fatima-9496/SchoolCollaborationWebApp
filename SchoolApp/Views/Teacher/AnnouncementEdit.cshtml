@model SchoolApp.Models.Announcement;

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Announcement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AnnouncementEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AnnouncementId" />
            <div class="form-group">
                <label asp-for="AnnouncementTitle" class="control-label"></label>
                <input asp-for="AnnouncementTitle" class="form-control" />
                <span asp-validation-for="AnnouncementTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnnouncementDescription" class="control-label"></label>
                <input asp-for="AnnouncementDescription" class="form-control" />
                <span asp-validation-for="AnnouncementDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostDate" class="control-label"></label>
                <input asp-for="PostDate" class="form-control" />
                <span asp-validation-for="PostDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MediaUrl" class="form-label mt-4">Upload project video or image</label>
                <input asp-for="MediaUrl" type="file" class="form-control-file" />
                <span asp-validation-for="MediaUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnnouncementAuthor" class="control-label"></label>
                <input asp-for="AnnouncementAuthor" />
                <span asp-validation-for="AnnouncementAuthor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

