@model IEnumerable<SchoolApp.Models.Course>

@{
    ViewData["Title"] = "School App";
}
<p>
    <a asp-action="CreateCourse">Create New Course</a>
</p>
<form asp-controller="Teacher" asp-action="CourseIndex" method="get">
    <p>
        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    <a asp-action="CourseEdit" asp-route-id="@item.CourseId">Edit |</a>
                    <a asp-action="CourseDelete" asp-route-id="@item.CourseId">delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>