@model SchoolApp.Models.Assignment;
@{
    ViewData["Title"] = "Assignment";
}
<form method="post" asp-action="CreateAssignment">
    <fieldset>
        <legend>Assignment Form</legend>
        <div class="form-group row">
            <label asp-for="AssignmentTitle" class="col-sm-2 col-form-label">Assignment</label>
            <div class="col-sm-10">
                <input type="text" readonly="" class="form-control-plaintext">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AssignmentTitle" class="form-label mt-4">Assignment Title</label>
            <input asp-for="AssignmentTitle" type="text" class="form-control" placeholder="Enter Assignment Title">
            <span asp-validation-for="AssignmentTitle" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AssignmentDescription" class="form-label mt-4">Assignment Description</label>
            <textarea asp-for="AssignmentDescription" class="form-control" id="exampleTextarea" rows="4"></textarea>
            <span asp-validation-for="AssignmentDescription" class="text-danger"></span>

        </div>
        <div class="form-group">
            @Html.AntiForgeryToken()
            @Html.LabelFor(model => model.Deadline)
            @Html.TextBoxFor(model => model.Deadline, new { @class = "form-control", type = "date" })
            <span asp-validation-for="Deadline" class="text-danger"></span>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Course.CourseName)
            @Html.DropDownListFor(model => model.Course.CourseName, new SelectList(ViewBag.CourseNames), "-- Select a course --", new { @class = "form-control" })
        </div>                
        <br />
        <button type="submit" class="btn btn-primary">Submit</button>
    </fieldset>
</form>
<div>
    <a asp-action="AssignmentIndex">Back to List</a>
</div>



