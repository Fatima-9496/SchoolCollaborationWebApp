@using SchoolApp.Models;
@model SchoolApp.Models.Assignment;
@{
    ViewData["Title"] = "Assignment";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}
<div class="pt--120 pb--70">
    <div class="container">
                <h2 class="primary-color">Create Assignment</h2>
        <div class="formbold-main-wrapper">
          <div class="formbold-form-wrapper">
            <form method="post" asp-action="CreateAssignment" enctype="multipart/form-data">
              <div class="formbold-mb-3">
                <label asp-for="AssignmentTitle" class="formbold-form-label"> Assignment Title: </label>
                <input
                  type="text"
                  asp-for="AssignmentTitle"
                  id="age"
                  class="formbold-form-input"
                />
                <span asp-validation-for="AssignmentTitle" class="text-danger"></span>
              </div>

              
              <div class="formbold-mb-3">
                <label asp-for="AssignmentDescription" class="formbold-form-label">
                  Assignment description
                </label>
                <textarea
                  rows="6"
                  asp-for="AssignmentDescription"
                  id="message"
                  class="formbold-form-input"
                ></textarea>
                 <span asp-validation-for="AssignmentDescription" class="text-danger"></span>
              </div>
              <div class="formbold-mb-3">
                  <label asp-for="Deadline" class="formbold-form-label">Deadline</label>
                  @Html.TextBoxFor(model => model.Deadline, new { @class = "formbold-form-input formbold-mb-3", type = "date", id="address" })
                  <span asp-validation-for="Deadline" class="text-danger"></span>                              
              </div>              
              <div class="formbold-form-file-flex">
                <label asp-for="AssignmentFile" class="formbold-form-label">
                  Assignment file
                </label>
                <input
                  type="file"
                  asp-for="AssignmentFile"
                  id="upload"
                  class="formbold-form-file"
                  accept="image/*, application/pdf, application/msword, video/*, .txt"
                />
                <span asp-validation-for="AssignmentFile" class="text-danger"></span> 
              </div>
                @{
                SelectList courseList = TempData["CourseList"] as SelectList;
                }
              <div class="formbold-mb-3">
                <label  class="formbold-form-label"> Course Name </label>

                <select class="formbold-form-input" asp-for="CourseId" asp-items="@(ViewBag.Message)" class="form-control"></select>
                
                 <span asp-validation-for="CourseId" class="text-danger"></span>              
              </div>
              <button class="formbold-btn">Create</button>
            </form>
          </div>
        </div>
    </div>
</div>
<style>
