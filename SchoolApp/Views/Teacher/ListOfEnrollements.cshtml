@model List<SchoolApp.Models.Enrollment> 

@{
    ViewData["Title"] = "Enrollments with Details";
}

<h1>List of enrolled students</h1>

<table class="table">
    <thead>
        <tr>            
            <th>Course Name</th>
            <th>Student Name</th>
            <th>Student Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var enrollment in Model)
        {
            <tr>                
                <td>@(enrollment.Course != null ? enrollment.Course.CourseName : "N/A")</td>
                <td>@(enrollment.AppUser != null ? enrollment.AppUser.UserName : "N/A")</td>
            </tr>
        }
    </tbody>
</table>
