@model SchoolApp.Models.Project
@{
    ViewData["Title"] = "Project";
}
<form method="post" asp-action="CreateProject">
    <fieldset>
        <legend>Project Form</legend>
        <div class="form-group row">
            <label asp-for="ProjectTitle" class="col-sm-2 col-form-label">Project</label>
            <div class="col-sm-10">
                <input type="text" readonly="" class="form-control-plaintext">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProjectTitle" class="form-label mt-4">Project Title</label>
            <input asp-for="ProjectTitle" type="text" class="form-control" placeholder="Enter Project Title">
            <span asp-validation-for="ProjectTitle" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProjectDescription" class="form-label mt-4">Project Description</label>
            <textarea asp-for="ProjectDescription" class="form-control" id="exampleTextarea" rows="4"></textarea>
            <span asp-validation-for="ProjectDescription" class="text-danger"></span>

        </div>

        <div class="form-group">
            @Html.AntiForgeryToken()
            @Html.LabelFor(model => model.DateCompleted)
            @Html.TextBoxFor(model => model.DateCompleted, new { @class = "form-control", type = "date" })
            <span asp-validation-for="DateCompleted" class="text-danger"></span>
        </div>
        <br/>
        <div class="form-group">
            <label asp-for="MediaUrl" class="form-label mt-4">Upload project video or image</label>
            <input asp-for="MediaUrl" type="file" class="form-control-file" />
            <span asp-validation-for="MediaUrl" class="text-danger"></span>
        </div>
        <br />
       
        <br/></br>
        <button type="submit" class="btn btn-primary">Submit</button>
    </fieldset>
</form>

