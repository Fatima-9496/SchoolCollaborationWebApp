@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="course-area  pt--120 pb--70">
    <div class="container">
        <div class="comment-area">
            <h4 class="comment-title" style="color: red;"><span>Are you sure you want to delete this?</span></h4>

            <article>
                <div class="comment-thumb">
                    <b> @Html.DisplayNameFor(model => model.AppUser.UserName)&nbsp;&nbsp;&nbsp;</b>
                </div>
                <div class="comment-content">
                    <h4> @Html.DisplayFor(model => model.AppUser.UserName)</h4>
                </div>
            </article>
            <article>
                <div class="comment-thumb">
                    <b> @Html.DisplayNameFor(model => model.Course.CourseName)&nbsp;&nbsp;&nbsp;</b>
                </div>
                <div class="comment-content">
                    <h4> @Html.DisplayFor(model => model.Course.CourseName)</h4>
                </div>
            </article>
            <article>
                <form asp-action="EnrollmentDelete">
                    <input type="hidden" asp-for="EnrollmentId" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a class="btn btn-primary btn-round btn-sm" asp-action="EnrollInACourse">Back to List</a>
                </form>
            </article>
        </div>
    </div>
</div>

